<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.likhith.single_screen_app.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOTEL ANANTHASHRAM"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="20dp"
        android:id="@+id/hotel"
        android:background="#2196F3"/>
    <ImageView
        android:id="@+id/anath"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/anath"
        android:layout_below="@id/hotel"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hours:11:30AM-8PM"
        android:textSize="30sp"
        android:textColor="#000000"
        android:id="@+id/hours"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:09130212806"
        android:textSize="30sp"
        android:textColor="#000000"
        android:id="@+id/phone"
        android:layout_above="@id/hours"
        android:layout_alignLeft="@id/hours"
        android:layout_alignStart="@id/hours" />

</RelativeLayout>
